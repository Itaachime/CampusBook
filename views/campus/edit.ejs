<% include ../partial/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Campus Picture</h1>
        <div style="width: 30%; margin: 24px auto;">
            <form action="/campus/<%=campus._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campus[name]" value="<%= campus.name %>" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campus[image]" value="<%= campus.image %>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="campus[description]" value="<%= campus.description %>">
                    </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMIT!</button>
                </div>
            </form>
            <a href="/campus">GO BACK</a>
        </div>

    </div>
</div>

<% include ../partial/footer %>